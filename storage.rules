
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura pública de todos os arquivos.
    // Isso é comum para imagens de cursos, logos, etc.
    // Se precisar de conteúdo privado, regras mais específicas seriam necessárias.
    match /{allPaths=**} {
      allow read;
    }

    // Permite que usuários autenticados escrevam em sua própria pasta de inquilino.
    // A pasta do inquilino é identificada pelo UID do usuário.
    match /tenants/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
